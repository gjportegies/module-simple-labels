                       type="text"
                       sortOrder="10"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1">
                    <label>ID</label>
                    <comment>Identification string (Default: 'new')</comment>
                    <frontend_class>hidden</frontend_class>
